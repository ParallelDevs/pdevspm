{% extends '::layout.html.twig' %}

{% block page_title -%} Edit User{% endblock %}

{% block content %}

    <div class="col-md-12">
        <div class="box box-primary">
            {{ form_start(edit_form, {'attr': {'role' : 'form'}}) }}
            <div class="box-body">
                {{ form_errors(edit_form) }}

                <div class="form-group">
                    {{ form_label(edit_form.email) }}
                    {{ form_errors(edit_form.email) }}
                    {{ form_widget(edit_form.email, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(edit_form.username) }}
                    {{ form_errors(edit_form.username) }}
                    {{ form_widget(edit_form.username, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(edit_form.plainPassword.first) }}
                    {{ form_errors(edit_form.plainPassword.first) }}
                    {{ form_widget(edit_form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(edit_form.plainPassword.second) }}
                    {{ form_errors(edit_form.plainPassword.second) }}
                    {{ form_widget(edit_form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(edit_form.name) }}
                    {{ form_errors(edit_form.name) }}
                    {{ form_widget(edit_form.name, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    <img class="img-responsive" src="/{{ entity.getWebPath }}"  width="100" alt="User profile picture">
                </div>

                <div class="form-group">
                    {{ form_label(edit_form.file) }}
                    {{ form_errors(edit_form.file) }}
                    {{ form_widget(edit_form.file, {'attr': {'class': 'form-control'}}) }}
                </div>

            </div>
            <div class="box-footer">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
            {{ form_end(edit_form) }}
        </div>
    </div>

    <ul class="record_actions">
        <li>
            <a href="{{ path('admin_user') }}">
                Back to the list
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
{% endblock %}
