{% extends '::layout.html.twig' %}

{% block page_title -%}Tasks Status List{% endblock %}

{% block content %}

    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header">
                <i class="fa fa-filter"></i>
                <h3 class="box-title">Filters</h3>
            </div>
            <div class="box-body pad table-responsive">
                Here will go the filters
            </div><!-- /.box -->
        </div>
    </div>

    <div class="col-md-2">
        <div class="box">
            <a class="btn btn-block btn-primary btn-lg" href="{{ path('config_task_priority_new') }}">
                Create a Task Priority
            </a>
        </div>
    </div>

    <div class="col-xs-12">
        <div class="box box-primary">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Icon</th>
                    <th>Sortorder</th>
                    <th>Defaultvalue</th>
                    <th>Active</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td><a href="{{ path('config_task_priority_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                        <td>{{ entity.name }}</td>
                        <td>{{ entity.icon }}</td>
                        <td>{{ entity.sortOrder }}</td>
                        <td>{{ entity.defaultValue }}</td>
                        <td>{{ entity.active }}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('config_task_priority_show', { 'id': entity.id }) }}">show</a>
                                </li>
                                <li>
                                    <a href="{{ path('config_task_priority_edit', { 'id': entity.id }) }}">edit</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
