{% extends '::layout.html.twig' %}

{% block page_title -%} Tickets Status List {% endblock %}

{% block content %}

    <div class="col-xs-12">
        <div class="box box-primary">

            <table class="table table-hover">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ entity.name }}</td>
                </tr>
                <tr>
                    <th>Group</th>
                    <td>{{ entity.group.name }}</td>
                </tr>
                <tr>
                    <th>Sortorder</th>
                    <td>{{ entity.sortOrder }}</td>
                </tr>
                <tr>
                    <th>Defaultvalue</th>
                    <td>{{ entity.defaultValue }}</td>
                </tr>
                <tr>
                    <th>Active</th>
                    <td>{{ entity.active }}</td>
                </tr>
                </tbody>
            </table>

        </div>
    </div>

    <ul class="record_actions">
        <li>
            <a href="{{ path('config_ticket_status') }}">
                Back to the list
            </a>
        </li>
        <li>
            <a href="{{ path('config_ticket_status_edit', { 'id': entity.id }) }}">
                Edit
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
{% endblock %}
