{% extends '::layout.html.twig' %}

{% block page_title -%}Projects Comments{% endblock %}

{% block content %}
    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header">
                <i class="fa fa-filter"></i>
                <h3 class="box-title">Filters</h3>
            </div>
            <div class="box-body pad table-responsive">
                Here will go the filters
            </div><!-- /.box -->
        </div>
    </div>

    <div class="col-xs-12">
        <div class="box box-primary">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Description</th>
                    <th>Createdat</th>
                    <th>Actions</th>

                </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td>{{ entity.id }}</td>
                        <td>{{ entity.description }}</td>
                        <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>
                            <ul>
                                <li>
                                    <a class="fa fa-list"  href="{{ path('project_comment_show', { 'project_comment_id': entity.id, 'project_id': entity.project.id }) }}"></a>
                                </li>
                                <li>
                                    <a class="fa fa-edit" href="{{ path('project_comment_edit', { 'project_comment_id': entity.id, 'project_id': entity.project.id }) }}"></a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
