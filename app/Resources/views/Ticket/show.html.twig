{% extends '::layout.html.twig' %}

{% block page_title -%} Ticket Detail {% endblock %}

{% block content %}


    <div class="col-xs-12">
        <div class="box box-primary">
            <table class="table table-hover">
                <tbody>
                {% for entity in entity %}
                    <tr>
                        <th>Id</th>
                        <td>{{ entity.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ entity.name }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ entity.description }}</td>
                    </tr>
                    <tr>
                        <th>Createdat</th>
                        <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <li>
     <a href="{{ path('ticket', { 'project_id': entity.project.id }) }}">Back to the list</a>
    </li>
    {% endfor %}
{% endblock %}
