{% extends '::layout.html.twig' %}

{% block page_title -%} Tickets List{% endblock %}

{% block content %}

    <table class="record_properties">
        <tbody>
        {% for entity in entity %}
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>
            {% endfor %}
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
