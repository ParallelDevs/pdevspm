{% extends 'base.html.twig' %}

{% block body %}
    <h1>ProjectPhase</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ projectPhase.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ projectPhase.name }}</td>
            </tr>
            <tr>
                <th>Duedate</th>
                <td>{% if projectPhase.dueDate %}{{ projectPhase.dueDate|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('projectphase_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('projectphase_edit', { 'id': projectPhase.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
