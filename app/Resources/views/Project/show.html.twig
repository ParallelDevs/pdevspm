{% extends '::layout.html.twig' %}

{% block content%}
 <h1>Projects Details</h1>            
 

        <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Team</th>           
                <td>{{ entity.team }}</td>            
            </tr>
           
            <tr>
             <th>Createdate</th>            
                <td>{{ entity.createdAt|date('Y-m-d') }}</td>            
            </tr>
            <tr>
            <th>Ordertasksby</th>            
                <td>{{ entity.orderTasksBy }}</td>           
            </tr>           
        </tbody>
    </table>
<li>{{ form(delete_form) }}</li>           
        <ul class="record_actions">
    <li>
        <a href="{{ path('projects') }}">
            Back to the list
        </a>
    </li>
</ul>   
{% endblock %}
