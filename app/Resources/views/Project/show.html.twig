{% extends '::layout.html.twig' %}

{% block page_title -%} Project Details{% endblock %}

{% block  content %}
   
   <table class="table table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>                    
                <th>Name</th>
                <a href="{{ path('project_show', { 'project_id': entity.id }) }}">
                    <td>{{ entity.name }}</td>
                </a>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>CreatedBy</th>
                <td>{{ entity.createdBy }}</td>
            </tr>
                        
        </tbody>        
   </table>
        <ul class="record_actions">
            <li>
                <a href="{{ path('project') }}">
                    Back to the list of Projects
                </a>
            </li>
            <li>
                <a class="fa fa-edit" href="{{ path('project_edit', { 'id': entity.id }) }}">
                    Edit
                </a>
            </li>
            <li>
                <a class="fa fa-edit" href="{{ path('version_new', { 'project_id': entity.id }) }}">
                    Add Version
                </a>
            </li>
            <li>
                <a class="fa fa-edit" href="{{ path('config_task_group_new', { 'project_id': entity.id }) }}">
                    Add Task Group
                </a>
            </li>
            <li>
                <a class="fa fa-edit" href="{{ path('ticket_new', { 'project_id': entity.id }) }}">
                    Add Ticket </a>
            </li>
            <li>
                <a class="fa fa-edit" href="{{ path('task_new', { 'project_id': entity.id }) }}">
                    Add Task
                </a>
            </li>

        </ul>

{% endblock %}
