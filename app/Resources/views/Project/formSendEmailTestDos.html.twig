{% extends '::layout.html.twig' %}

{% block page_title -%}Projects{% endblock %}

{% block content %}
    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header">
                <i class="fa fa-filter"></i>
                <h3 class="box-title">Filters</h3>
            </div>
            <div class="box-body pad table-responsive">
                Here will go the filters
            </div><!-- /.box -->
        </div>
    </div>

    <div class="col-xs-12">
        <div class="box box-primary">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Created at</th>
                    <th>Ticket Status</th>
                    <th>Ticket Type</th>
                    <th>User</th>
                    <th>Project</th>
                    <th>Department</th>

                </tr>
                </thead>
                <tbody>
                {% for entity in entity %}
                    <tr>
                        <td>{{ entity.id }}</td>
                        <td>{{ entity.name }}</a></td>
                        <td>{{ entity.description }}</a></td>
                        <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>{{ entity.ticketStatus }}</td>
                        <td>{{ entity.ticketType }}</td>
                        <td>{{ entity.user }}</td>
                        <td>{{ entity.project.id }}</td>
                        <td>{{ entity.department }}</td>

                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
