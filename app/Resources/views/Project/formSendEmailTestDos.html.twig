{% extends '::layout.html.twig' %}

{% block page_title -%}Projects{% endblock %}

{% block content %}
    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header">
                <i class="fa fa-filter"></i>
                <h3 class="box-title">Filters</h3>
            </div>
            <div class="box-body pad table-responsive">
                Here will go the filters
            </div><!-- /.box -->
        </div>
    </div>

    <div class="col-xs-12">
        <div class="box box-primary">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for entity in entity %}
                    <tr>
                        <td>{{ entity.id }}</td>
                        <td><a href="{{ path('project_show', { 'project_id': entity.id }) }}">{{ entity.name }}</a></td>
                        <td>{{ entity.email }}</a></td>
                        <td>{{ entity.description }}</td>
                        <td>
                            <li>
                                <a class="fa fa-trash"  href="{{ path('project_delete', { 'project_id': entity.id }) }}"></a>
                            </li>
                            <li>
                                <a class="fa fa-edit" href="{{ path('project_edit', { 'id': entity.id }) }}"></a>

                            </li>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
