{% extends '::layout.html.twig' %}

{% block content%}
    
    {% dump(edit_form) %}
    <h1>Projects Edit Information asd </h1>
    {{ form_start(edit_form, {'action': path('projects_update', {'id': entity.id} ), 'method': 'PUT'  })  }}
    
   <div class="form-group"> 
    <label>Type: </label>{{ form_widget(edit_form.projectsTypes, {'attr': {'class': 'form-control'}}) }}<br> 
   </div> 
   
   <div class="form-group"> 
    <label>Status: </label>{{ form_widget(edit_form.projectsStatus, {'attr': {'class': 'form-control'}}) }}<br>
   </div>
   
   <div class="form-group"> 
    <label>Name: </label>{{ form_widget(edit_form.name, {'attr': {'class': 'form-control', 'placeholder':'Name'}}) }}<br>   
   </div>  
   
   <div class="form-group">
   <label>Select Team: </label><br>   
   {% for u in users %}       
       {% if u.id in options %}       
       <input type="checkbox" checked id="projects_team_{{u.id}}" name="projects[team][]" value="{{u.id}}"> <label for="projects_team_{{u.id}}">{{u.name}}</label>    
    {% else %}        
       <input type="checkbox" id="projects_team_{{u.id}}" name="projects[team][]" value="{{u.id}}"> <label for="projects_team_{{u.id}}">{{u.name}}</label>         
    {% endif%}    
   {% endfor %} 
   </div>
   
   <div class="form-group"> 
    <label>Description: </label>{{ form_widget(edit_form.description, {'attr': {'class': 'form-control', 'placeholder':'Description'}}) }}
   </div>  
   
   <div class="form-group"> 
    <label>Created By: </label>{{ form_widget(edit_form.createdBy, {'attr': {'class': 'form-control'}}) }}
   </div>   
   <button class="btn btn-default" type="submit">Save</button>
   <button class="btn btn-default" type="reset">Close</button>   
   <br/> 
{{ form_end(edit_form) }}
<ul class="btn btn-link">
    <li>
        <a href="{{ path('projects') }}">
            Back to the list
        </a>
    </li>
</ul>
{% endblock %}
