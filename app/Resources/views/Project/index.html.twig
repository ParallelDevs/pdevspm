{% extends '::layout.html.twig' %}


{% block page_title -%}Projects{% endblock %}

{% block content %}
    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header">
                <i class="fa fa-filter"></i>
                <h3 class="box-title">Filters</h3>
            </div>
            <div class="box-body pad table-responsive">
                Here will go the filters
            </div><!-- /.box -->
        </div>
    </div>

    <div class="col-md-2">
        <div class="box">
            <a class="btn btn-block btn-primary btn-lg" href="{{ path('project_new') }}">
                Create a Project
            </a>
        </div>
    </div>

    <div class="col-xs-12">
        <div class="box box-primary">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Created at</th>
                    <th>Create By</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td>{{ entity.id }}</td>
                        <td><a href="{{ path('project_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
                        <td>{{ entity.description }}</td>
                        <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>{{ entity.createdBy }}</td>
                        <td>
                            <ul>
                                <li>
                                    <a class="fa fa-list"  href="{{ path('project_show', { 'id': entity.id }) }}"></a>
                                </li>
                                <li>
                                    <a class="fa fa-edit" href="{{ path('project_edit', { 'id': entity.id }) }}"></a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    {% endblock %}
