{% extends '::layout.html.twig' %}

{% block content%}
    <h1>Projects list</h1>
    
    <ul>
        <li>
            <a href="{{ path('projects_new') }}">
                Create a new Project
            </a>
        </li>
    </ul>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Team</th>
                <th>Createdat</th>
                <th>Ordertasksby</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('projects_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.team }}</td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.orderTasksBy }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('projects_show', { 'id': entity.id }) }}">Show</a>
                    </li>
                    <li>
                        <a href="{{ path('projects_edit', { 'id': entity.id }) }}">Edit</a>
                    </li>
                     <li>
                        <a href="{{ path('projects_delete', { 'id': entity.id }) }}">Delete</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>        
 {% endblock %}
 