{% extends '::layout.html.twig' %}

{% block page_title -%}Tasks List{% endblock %}

{% block content %}

    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header">
                <i class="fa fa-filter"></i>
                <h3 class="box-title">Filters</h3>
            </div>
            <div class="box-body pad table-responsive">
                Here will go the filters
            </div><!-- /.box -->
        </div>
    </div>
    <div class="col-xs-12">
        <div class="box box-primary">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Assignedto</th>
                    <th>Estimatedtime</th>
                    <th>Duedate</th>
                    <th>Createdat</th>
                    <th>Closeddate</th>
                    <th>Discussionid</th>
                    <th>Startdate</th>
                    <th>Progress</th>
                    <th>Actions</th>

                </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td><a href="{{ path('task_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                        <td>{{ entity.name }}</td>
                        <td>{{ entity.description }}</td>
                        <td>{{ entity.assignedTo }}</td>
                        <td>{{ entity.estimatedTime }}</td>
                        <td>{% if entity.dueDate %}{{ entity.dueDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>{% if entity.closedDate %}{{ entity.closedDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>{{ entity.discussionId }}</td>
                        <td>{% if entity.startDate %}{{ entity.startDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>{{ entity.progress }}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('task_show', { 'id': entity.id }) }}">show</a>
                                </li>
                                <li>
                                    <a href="{{ path('task_edit', { 'id': entity.id }) }}">edit</a>
                                </li>
                            </ul>
                        </td>
                    </tr>



                </tbody>
            </table>
            <div class="col-md-2">
                <div class="box">
                    <a class="btn btn-block btn-primary btn-lg" href="{{ path('task_new', { 'project_id': entity.project.id }) }}">
                        Create a New Task
                    </a>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>

    {% endblock %}
