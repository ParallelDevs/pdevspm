{% extends '::layout.html.twig' %}

{% block page_title -%} Tasks List {% endblock %}

{% block content %}

    <div class="col-xs-12">
        <div class="box box-primary">
            <table class="table table-hover">
                <tbody>
                {% for entity in entity %}
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ entity.name }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ entity.description }}</td>
                </tr>

                <tr>
                    <th>Estimatedtime</th>
                    <td>{{ entity.estimatedTime }}</td>
                </tr>
                <tr>
                    <th>Duedate</th>
                    <td>{{ entity.dueDate|date('Y-m-d H:i:s') }}</td>
                </tr>

                <tr>
                    <th>Createdat</th>
                    <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
                </tr>
                <tr>
                    <th>Closeddate</th>
                    <td>{{ entity.closedDate|date('Y-m-d H:i:s') }}</td>
                </tr>
                <tr>
                    <th>Discussionid</th>
                    <td>{{ entity.discussionId }}</td>
                </tr>
                <tr>
                    <th>Startdate</th>
                    <td>{{ entity.startDate|date('Y-m-d H:i:s') }}</td>
                </tr>
                <tr>
                    <th>Progress</th>
                    <td>{{ entity.progress }}</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
        <ul class="record_actions">
    <li>
        <a href="{{ path('task', { 'project_id': entity.project.id }) }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('task_comment_new', { 'task_id': entity.id, 'project_id': entity.project.id }) }}">
            Add Task Comment
        </a>
    </li>
    {% endfor %}
</ul>
{% endblock %}
