{% extends '::layout.html.twig' %}

{% block page_title -%} Create New Task Label {% endblock %}

{% block content %}

    <div class="col-md-12">
        <div class="box box-primary">
            {{ form_start(form, {'attr': {'role' : 'form'}}) }}
            <div class="box-header">

                <div class="box-tools">

                    <a href="{{ path('project') }}">
                        Back to the list
                    </a>
                </div>
            </div>

            <div class="box-body">
                {{ form_errors(form) }}

                <div class="form-group">
                    {{ form_label(form.name) }}
                    {{ form_errors(form.name) }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Enter the name'}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.description) }}
                    {{ form_errors(form.description) }}
                    {{ form_widget(form.description) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.assignedTo) }}
                    {{ form_errors(form.assignedTo) }}
                    {{ form_widget(form.assignedTo) }}
                </div>

                <div class="form-group">

                    {{ form_label(form.dueDate) }}
                    {{ form_errors(form.dueDate) }}
                    {{ form_widget(form.dueDate) }}

                </div>

                <div class="form-group">

                    {{ form_label(form.createdAt) }}
                    {{ form_errors(form.createdAt) }}
                    {{ form_widget(form.createdAt) }}

                </div>

                <div class="form-group">

                    {{ form_label(form.startDate) }}
                    {{ form_errors(form.startDate) }}
                    {{ form_widget(form.startDate) }}

                </div>

                <div class="form-group">

                    {{ form_label(form.closedDate) }}
                    {{ form_errors(form.closedDate) }}
                    {{ form_widget(form.closedDate) }}

                </div>

                <div class="form-group">

                    {{ form_label(form.progress) }}
                    {{ form_errors(form.progress) }}
                    {{ form_widget(form.progress) }}

                </div>

                <div class="form-group">

                    {{ form_label(form.project) }}
                    {{ form_errors(form.project) }}
                    {{ form_widget(form.project) }}

                </div>

                <div class="form-group">

                    {{ form_label(form.taskStatus) }}
                    {{ form_errors(form.taskStatus) }}
                    {{ form_widget(form.taskStatus) }}

                </div>

                <div class="form-group">

                    {{ form_label(form.taskPriority) }}
                    {{ form_errors(form.taskPriority) }}
                    {{ form_widget(form.taskPriority) }}

                </div>

                <div class="form-group">

                    {{ form_label(form.taskType) }}
                    {{ form_errors(form.taskType) }}
                    {{ form_widget(form.taskType) }}

                </div>

                <div class="form-group">

                    {{ form_label(form.taskLabel) }}
                    {{ form_errors(form.taskLabel) }}
                    {{ form_widget(form.taskLabel) }}

                </div>

                <div class="form-group">

                    {{ form_label(form.taskGroup) }}
                    {{ form_errors(form.taskGroup) }}
                    {{ form_widget(form.taskGroup) }}

                </div>

            </div>

            <div class="box-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>


            {{ form_end(form) }}




        </div>
    </div>


{% endblock %}
