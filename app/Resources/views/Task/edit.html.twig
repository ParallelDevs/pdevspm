{% extends '::layout.html.twig' %}

{% block content %}

    <div class="col-md-12">
        <div class="box box-primary">
            {{ form_start(edit_form, {'attr': {'role' : 'form'}}) }}

            <div class="box-header">
                <h3 class="box-title">Edit TASK</h3>

            </div>

            <div class="box-body">
                {{ form_errors(edit_form) }}

                <div class="form-group">
                    {{ form_label(edit_form.taskStatus) }}
                    {{ form_errors(edit_form.taskStatus) }}
                    {{ form_widget(edit_form.taskStatus) }}
                </div>

                <div class="form-group">
                    {{ form_label(edit_form.description) }}
                    {{ form_errors(edit_form.description) }}
                    {{ form_widget(edit_form.description, {'attr': {'class': 'form-control', 'placeholder': 'Enter the Task description'}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(edit_form.assignedTo) }}
                    {{ form_errors(edit_form.assignedTo) }}
                    {{ form_widget(edit_form.assignedTo, {'attr': {'class': 'form-control', 'placeholder': 'Enter the Task name'}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(edit_form.dueDate) }}
                    {{ form_errors(edit_form.dueDate) }}
                    {{ form_widget(edit_form.dueDate) }}
                </div>

                <div class="form-group">
                    {{ form_label(edit_form.createdAt) }}
                    {{ form_errors(edit_form.createdAt) }}
                    {{ form_widget(edit_form.createdAt) }}
                </div>

                <div class="form-group">
                    {{ form_label(edit_form.closedDate) }}
                    {{ form_errors(edit_form.closedDate) }}
                    {{ form_widget(edit_form.closedDate) }}
                </div>

                <div class="form-group">
                    {{ form_label(edit_form.startDate) }}
                    {{ form_errors(edit_form.startDate) }}
                    {{ form_widget(edit_form.startDate) }}
                </div>

                <div class="form-group">
                    {{ form_label(edit_form.progress) }}
                    {{ form_errors(edit_form.progress) }}
                    {{ form_widget(edit_form.progress) }}
                </div>

                <div class="form-group">
                    {{ form_label(edit_form.taskStatus) }}
                    {{ form_errors(edit_form.taskStatus) }}
                    {{ form_widget(edit_form.taskStatus) }}
                </div>

                <div class="form-group">
                    {{ form_label(edit_form.taskPriority) }}
                    {{ form_errors(edit_form.taskPriority) }}
                    {{ form_widget(edit_form.taskPriority) }}
                </div>

                <div class="form-group">
                    {{ form_label(edit_form.taskType) }}
                    {{ form_errors(edit_form.taskType) }}
                    {{ form_widget(edit_form.taskType) }}
                </div>

                <div class="form-group">
                    {{ form_label(edit_form.taskLabel) }}
                    {{ form_errors(edit_form.taskLabel) }}
                    {{ form_widget(edit_form.taskLabel) }}
                </div>

                <div class="form-group">
                    {{ form_label(edit_form.taskGroup) }}
                    {{ form_errors(edit_form.taskGroup) }}
                    {{ form_widget(edit_form.taskGroup) }}
                </div>

                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                {{ form_end(edit_form) }}
            </div>
        </div>
    </div>

{% endblock %}
