{% extends '::base.html.twig' %}

{% block body %}
    <h1>Projects Details</h1>

    <table>
        <tbody>
           {% for entity in entity %}         
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Team</th>           
                <td>{{ entity.team }}</td>            
            </tr>
            <tr>
             <th>Createdate</th>            
                <td>{{ entity.createdAt|date('Y-m-d') }}</td>            
            </tr>
            <tr>
            <th>Ordertasksby</th>            
                <td>{{ entity.orderTasksBy }}</td>           
            </tr>
           {% endfor %}
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('projects_index') }}">
            Back to the list
        </a>
    </li>
</ul>
{% endblock %}
