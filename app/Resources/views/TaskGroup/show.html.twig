{% extends '::layout.html.twig' %}

{% block page_title -%} Tasks Group List {% endblock %}

{% block content %}

    <div class="col-xs-12">
        <div class="box box-primary">
            <table class="table table-hover">
                <tbody>
                {% for entity in entity %}
                    <tr>
                        <th>Id</th>
                        <td>{{ entity.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ entity.name }}</td>
                    </tr>
                </tbody>

            </table>
        </div>
    </div>
    <ul class="record_actions">
        <li>
            <a href="{{ path('config_task_group', { 'project_id': entity.project.id })}}">
                Back to the list
            </a>
        </li>

        {% endfor %}
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}


