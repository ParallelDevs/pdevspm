{% extends '::layout.html.twig' %}

{% block content %}

    <div class="col-md-12">
        <div class="box box-primary">
            {{ form_start(edit_form, {'attr': {'role' : 'form'}}) }}

            <div class="box-header">
                <h3 class="box-title">Edit</h3>
                <div class="box-tools">

                    <a href="{{ path('config_task_group') }}">
                        Back to the list
                    </a>
                </div>
            </div>

            <div class="box-body">
                {{ form_errors(edit_form) }}

                <div class="form-group">
                    {{ form_label(edit_form.name) }}
                    {{ form_errors(edit_form.name) }}
                    {{ form_widget(edit_form.name, {'attr': {'class': 'form-control', 'placeholder': 'Enter the Project name'}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(edit_form.project) }}
                    {{ form_errors(edit_form.project) }}
                    {{ form_widget(edit_form.project) }}
                </div>

                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                {{ form_end(edit_form) }}

            </div>
        </div>
    </div>

    <ul class="record_actions">
        <li>{{ form(delete_form) }}</li>
    </ul>
{% endblock %}
