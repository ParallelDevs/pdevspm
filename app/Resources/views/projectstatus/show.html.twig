{% extends 'base.html.twig' %}

{% block body %}
    <h1>Project Status</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ projectStatus.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ projectStatus.name }}</td>
            </tr>
            <tr>
                <th>Sort order</th>
                <td>{{ projectStatus.sortOrder }}</td>
            </tr>
            <tr>
                <th>Default value</th>
                <td>{% if projectStatus.defaultValue %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{% if projectStatus.active %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('projectstatus_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('projectstatus_edit', { 'id': projectStatus.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
