{% extends 'base.html.twig' %}

{% block body %}
    <h1>ProjectType list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Sortorder</th>
                <th>Active</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for projectType in projectTypes %}
            <tr>
                <td><a href="{{ path('projecttype_show', { 'id': projectType.id }) }}">{{ projectType.id }}</a></td>
                <td>{{ projectType.name }}</td>
                <td>{{ projectType.sortOrder }}</td>
                <td>{% if projectType.active %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('projecttype_show', { 'id': projectType.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('projecttype_edit', { 'id': projectType.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('projecttype_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
