{% extends '::layout.html.twig' %}

{% block page_title -%} Create New Project Status{% endblock %}

{% block content %}
    <div class="col-md-12">
        <div class="box box-primary">
            {{ form_start(form, {'attr': {'role' : 'form'}}) }}
            <div class="box-header">

            </div>
            <div class="box-body">
                {{ form_errors(form) }}

                <div class="form-group">
                    {{ form_label(form.name) }}
                    {{ form_errors(form.name) }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Enter the Project Status name'}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.sortOrder) }}
                    {{ form_errors(form.sortOrder) }}
                    {{ form_widget(form.sortOrder, {'attr': {'class': 'form-control', 'placeholder': 'Sort Order'}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.defaultValue) }}
                    {{ form_errors(form.defaultValue) }}
                    {{ form_widget(form.defaultValue) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.active) }}
                    {{ form_errors(form.active) }}
                    {{ form_widget(form.active) }}
                </div>

            </div>
            <div class="box-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>


    <ul class="record_actions">
        <li>
            <a href="{{ path('config_project_status') }}">
                Back to the list
            </a>
        </li>
    </ul>
{% endblock %}
