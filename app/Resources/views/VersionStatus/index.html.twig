{% extends '::layout.html.twig' %}

{% block page_title -%} List Version Status {% endblock %}

{% block content %}

    <div class="col-md-12">
        <div class="box box-primary">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Sortorder</th>
                        <th>Defaultvalue</th>
                        <th>Active</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td><a href="{{ path('versionstatus_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                        <td>{{ entity.name }}</td>
                        <td>{{ entity.sortOrder }}</td>
                        <td>{{ entity.defaultValue }}</td>
                        <td>{{ entity.active }}</td>
                        <td>
                        <ul>
                            <li>
                                <a href="{{ path('versionstatus_show', { 'id': entity.id }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('versionstatus_edit', { 'id': entity.id }) }}">Edit</a>
                            </li>
                        </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <div class="col-md-2">
        <div class="box">
            <a class="btn btn-block btn-primary btn-lg" href="{{ path('versionstatus_new') }}">
                Add new Version Status
            </a>
        </div>
    </div>
    {% endblock %}
