{% extends '::layout.html.twig' %}

{% block page_title -%} Task Comment Details {% endblock %}

{% block content %}

    <div class="col-xs-12">
        <div class="box box-primary">
            <table class="table table-hover">
                <tbody>
                {% for entity in entity %}
                    <tr>
                        <th>Id</th>
                        <td>{{ entity.id }}</td>
                    </tr>
                    <tr>
                        <th>Duedate</th>
                        <td>{{ entity.dueDate|date('Y-m-d H:i:s') }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ entity.description }}</td>
                    </tr>
                    <tr>
                        <th>Createdat</th>
                        <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
                    </tr>
                    <tr>
                        <th>Progress</th>
                        <td>{{ entity.progress }}</td>
                    </tr>
                    <tr>
                        <th>Created By</th>
                        <td>{{ entity.task.createdBy }}</td>
                    </tr>
                    <tr>
                        <th>Assigned to</th>

                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
         {{ form(delete_form) }}

    </div>

{% endblock %}
