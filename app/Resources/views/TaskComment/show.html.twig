{% extends '::layout.html.twig' %}

{% block page_title -%} Task Comment Details {% endblock %}

{% block content %}

    <div class="col-xs-12">
        <div class="box box-primary">
            <table class="table table-hover">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ entity.id }}</td>
                    </tr>
                    <tr>
                        <th>Duedate</th>
                        <td>{{ entity.dueDate|date('Y-m-d H:i:s') }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ entity.description }}</td>
                    </tr>
                    <tr>
                        <th>Createdat</th>
                        <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
                    </tr>
                    <tr>
                        <th>Progress</th>
                        <td>{{ entity.progress }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
