{% extends '::layout.html.twig' %}

{% block page_title -%}Projects{% endblock %}

{% block content %}

    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header">
                <i class="fa fa-filter"></i>
                <h3 class="box-title">Filters</h3>
            </div>
            <div class="box-body pad table-responsive">
                Here will go the filters
            </div><!-- /.box -->
        </div>
    </div>

    <div class="col-md-2">
        <div class="box">

            <a class="btn btn-block btn-primary btn-lg" href="{{ path('config_department_new') }}">
                Create a Department
            </a>

        </div>
    </div>

    <div class="col-xs-12">
        <div class="box box-primary">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Assigned To</th>
                    <th>Sortorder</th>
                    <th>Active</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td>{{ entity.id }}</td>
                        <td><a href="{{ path('config_department_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
                        <td>{{ entity.user }}</td>
                        <td>{{ entity.sortOrder }}</td>
                        <td>{{ entity.active }}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('config_department_edit', { 'id': entity.id }) }}"><i class="fa fa-pencil-square-o"></i></a>
                                </li>
                                <li>
                                    <a href="{{ path('config_department_delete', { 'id': entity.id }) }}"><i class="fa fa-trash-o"></i></a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
