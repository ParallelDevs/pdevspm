{% extends '::layout.html.twig' %}

{% block page_title -%} Department Details{% endblock %}

{% block  content %}

    <div class="col-xs-12">
        <div class="box box-primary">
            <table class="table table-hover">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ entity.name }}</td>
                </tr>
                <tr>
                    <th>Assigned To</th>
                    <td>{{ entity.user }}</td>
                </tr>
                <tr>
                    <th>Sortorder</th>
                    <td>{{ entity.sortOrder }}</td>
                </tr>
                <tr>
                    <th>Active</th>
                    <td>{{ entity.active }}</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
    <li>
        <a href="{{ path('config_department') }}">
            Back to the list
        </a>
    </li>

{% endblock %}
