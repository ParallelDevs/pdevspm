{% extends '::layout.html.twig' %}

{% block page_title -%} Details Version {% endblock %}

{% block content %}
    
    <table class="record_properties">
        <tbody>
            {% for entity in entity %}
            <tr>                
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
        <ul class="record_actions">
    <li>
        <a href="{{ path('version' , { 'project_id': entity.project.id }) }}">
            Back to the list
        </a>
    </li>
    
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
