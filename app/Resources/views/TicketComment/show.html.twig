{% extends '::layout.html.twig' %}

{% block page_title -%} Ticket Detail {% endblock %}

{% block content %}

    <div class="col-xs-12">
        <div class="box box-primary">
            <table class="table table-hover">
                <tbody>
                {% for entity in entity %}
                    <tr>
                        <th>Id:</th>
                        <td>{{ entity.id }}</td>
                    </tr>
                    <tr>
                        <th>Ticket:</th>
                        <td>{{ entity.ticket.id }}</td>
                    </tr>
                    <tr>
                        <th>Description:</th>
                        <td>{{ entity.description }}</td>
                    </tr>

                    <tr>
                        <th>Ticket:</th>
                        <td>{{ entity.ticket.name }}</td>
                    </tr>
                    <tr>
                        <th>Project:</th>
                        <td>{{ entity.project.id }}</td>
                    </tr>
                    <tr>
                        <th>Created By:</th>
                        <td>{{ entity.ticket.user }}</td>
                    </tr>
                    <tr>
                        <th>CreatedAt:</th>
                        <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <li>
        <a href="{{ path('ticket_comment', { 'ticket_id': entity.ticket.id, 'project_id': entity.project.id }) }}">
                Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('ticket_comment_edit', { 'project_id': entity.project.id, 'ticket_id': entity.ticket.id, 'ticket_comment_id': entity.id   }) }}">
                Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
        {% endfor %}

{% endblock %}
