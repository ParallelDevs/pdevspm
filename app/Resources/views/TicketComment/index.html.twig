{% extends '::layout.html.twig' %}

{% block page_title -%} Tickets List{% endblock %}

{% block content %}

    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header">
                <i class="fa fa-filter"></i>
                <h3 class="box-title">Filters</h3>
            </div>
            <div class="box-body pad table-responsive">
                Here will go the filters
            </div><!-- /.box -->
        </div>
    </div>

    <div class="col-xs-12">
        <div class="box box-primary">

            <table class="table table-hover">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Description</th>
                    <th>Createdat</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                    {% for entity in entities %}
                        <tr>
                            <td>{{ entity.id }}</a></td>
                            <td><a href="{{ path('ticket_comment_show', { 'project_id': entity.ticket.id, 'ticket_id': entity.ticket.id, 'ticket_comment_id': entity.id }) }}">{{ entity.description }}</td>
                            <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                            <td>
                                <ul>
                                    <li>
                                        <a href="{{ path('ticket_comment_delete', { 'project_id': entity.project.id, 'ticket_id': entity.ticket.id, 'ticket_comment_id': entity.id }) }}"><i class="fa fa-trash-o"></i></a>
                                    </li>

                                    <li>
                                        <a href="{{ path('ticket_comment_edit', { 'project_id': entity.project.id, 'ticket_id': entity.ticket.id, 'ticket_comment_id': entity.id   }) }}"><i class="fa fa-pencil-square-o"></i></a>
                                    </li>

                                </ul>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
